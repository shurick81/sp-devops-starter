{
  "builders": [
    {
      "type": "azure-arm",
  
      "client_id": "{{user `client_id`}}",
      "client_secret": "{{user `client_secret`}}",
      "subscription_id": "{{user `subscription_id`}}",
      "tenant_id": "{{user `tenant_id`}}",
  
      "capture_container_name": "vmimages",
      "capture_name_prefix": "env-win2016-dev",
      "resource_group_name": "CommonRG",
      "storage_account": "commonstorwestus2",

      "os_type": "Windows",
      "image_publisher": "MicrosoftWindowsServer",
      "image_offer": "WindowsServer",
      "image_sku": "2016-Datacenter",
  
      "communicator": "winrm",
      "winrm_use_ssl": "true",
      "winrm_insecure": "true",
      "winrm_username": "packer",
  
      "location": "WestUS2",
      "vm_size": "Standard_DS1_v2"
    }
  ],
  "provisioners": [
    {
      "type": "powershell",
      "script": "winrm.ps1",
      "only": ["azure-arm"]
    },
    { "type": "powershell", "script": "PackageManagementProviderResource.ps1" },
    { "type": "powershell", "script": "basepsmodules.ps1" },
    { "type": "powershell", "script": "envdevpsmodules.ps1" },
    { "type": "powershell", "script": "envdevbin-1.ps1" },
    {
      "type": "powershell",
      "script": "azure/sysprep.ps1",
      "only": ["azure-arm"]
    }
  ],
  "variables": {
    "client_id": "{{env `ARM_CLIENT_ID`}}",
    "client_secret": "{{env `ARM_CLIENT_SECRET`}}",
    "subscription_id": "{{env `ARM_SUBSCRIPTION_ID`}}",
    "tenant_id": "{{env `ARM_TENANT_ID`}}"
  }
}
