{
    "builders": [
        {
            "type": "virtualbox-iso",
            "iso_checksum": "{{user `iso_checksum`}}",
            "iso_checksum_type": "{{user `iso_checksum_type`}}",
            "iso_url": "{{user `iso_url`}}",
            "floppy_files": [
                "{{user `autounattend`}}",
                "winrm.ps1",
                "sysprep.bat",
                "autounattend_sysprep.xml"
            ],
            "guest_additions_mode": "attach",
            "guest_os_type": "Windows10_64",
            "headless": "{{user `headless`}}",
            "shutdown_command": "a:/sysprep.bat",
            "disk_size": "{{user `disk_size`}}",
            "vboxmanage": [
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--memory",
                    "{{user `memory_size`}}"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--cpus",
                    "{{user `cpus`}}"
                ]
            ],
            "boot_wait": "2m",
            "communicator": "winrm",
            "winrm_username": "vagrant",
            "winrm_password": "Fractalsol365"
        },
        {
            "type": "hyperv-iso",
            "iso_checksum": "{{user `iso_checksum`}}",
            "iso_checksum_type": "{{user `iso_checksum_type`}}",
            "iso_url": "{{user `iso_url`}}",
            "floppy_files": [
                "{{user `autounattend`}}",
                "winrm.ps1",
                "sysprep.bat",
                "autounattend_sysprep.xml"
            ],
            "shutdown_command": "a:/sysprep.bat",
            "ram_size": "{{user `memory_size`}}",
            "cpu": "{{user `cpus`}}",
            "switch_name": "Default Switch",
            "communicator": "winrm",
            "winrm_username": "vagrant",
            "winrm_password": "Fractalsol365"
        },
        {
            "type": "vmware-iso",
            "iso_url": "{{user `iso_url`}}",
            "iso_checksum_type": "{{user `iso_checksum_type`}}",
            "iso_checksum": "{{user `iso_checksum`}}",
            "headless": "{{user `headless`}}",
            "boot_wait": "2m",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_wait_timeout": "2h",
            "shutdown_command": "a:/sysprep.bat",
            "guest_os_type": "windows8srv-64",
            "tools_upload_flavor": "windows",
            "disk_size": "{{user `disk_size`}}",
            "vnc_port_min": 5900,
            "vnc_port_max": 5980,
            "floppy_files": [
                "{{user `autounattend`}}",
                "winrm.ps1",
                "sysprep.bat",
                "autounattend_sysprep.xml"
            ],
            "vmx_data": {
                "RemoteDisplay.vnc.enabled": "false",
                "RemoteDisplay.vnc.port": "5900",
                "memsize": "{{user `memory_size`}}",
                "numvcpus": "{{user `cpus`}}",
                "scsi0.virtualDev": "lsisas1068"
            }
        },
        {
            "type": "parallels-iso",
            "iso_url": "{{user `iso_url`}}",
            "iso_checksum_type": "{{user `iso_checksum_type`}}",
            "iso_checksum": "{{user `iso_checksum`}}",
            "boot_wait": "2m",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_wait_timeout": "2h",
            "shutdown_command": "a:/sysprep.bat",
            "guest_os_type": "win-10",
            "parallels_tools_flavor": "win",
            "disk_size": "{{user `disk_size`}}",
            "floppy_files": [
                "{{user `autounattend`}}",
                "winrm.ps1",
                "sysprep.bat",
                "autounattend_sysprep.xml"
            ]
        },
        {
            "type": "azure-arm",
        
            "client_id": "{{user `client_id`}}",
            "client_secret": "{{user `client_secret`}}",
            "subscription_id": "{{user `subscription_id`}}",
            "tenant_id": "{{user `tenant_id`}}",
        
            "managed_image_resource_group_name": "CommonRG",
            "managed_image_name": "sp-win10-user",
        
            "os_type": "Windows",
            "image_publisher": "MicrosoftWindowsDesktop",
            "image_offer": "Windows-10",
            "image_sku": "RS3-Pro",
            "image_version": "latest",
        
            "communicator": "winrm",
            "winrm_use_ssl": "true",
            "winrm_insecure": "true",
            "winrm_timeout": "30m",
            "winrm_username": "packer",
        
            "location": "WestUS2",
            "vm_size": "Standard_F2s",
            "managed_image_storage_account_type": "Premium_LRS"
        }
    ],
    "provisioners": [
        {
            "type": "powershell",
            "script": "VirtualBox/installadditions.ps1",
            "only": ["virtualbox-iso"]
        },
        {
            "type": "powershell",
            "script": "HyperV/integration.ps1",
            "only": ["hyperv-iso"]
        },
        {
            "type": "powershell",
            "script": "rdpenable.ps1",
            "only": ["virtualbox-iso", "hyperv-iso", "vmware-iso", "parallels-iso"]
        },
        {
            "type": "powershell",
            "script": "winrm.ps1",
            "only": ["azure-arm"]
        },
        { "type": "powershell", "script": "PackageManagementProviderResource.ps1" },
        { "type": "powershell", "script": "basepsmodules.ps1" },
        { "type": "powershell", "script": "userpsmodules.ps1" },
        { "type": "powershell", "script": "userbin.ps1" },
        { "type": "powershell", "script": "waitforcpucalm.ps1" },
        {
            "type": "powershell",
            "script": "azure/sysprep.ps1",
            "only": ["azure-arm"]
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "output": "sp-win10-user.box"
        }
    ],
    "variables": {
        "iso_url": "https://download.microsoft.com/download/B/8/B/B8B452EC-DD2D-4A8F-A88C-D2180C177624/15063.0.170317-1834.RS2_RELEASE_CLIENTENTERPRISEEVAL_OEMRET_X64FRE_EN-US.ISO",
        "iso_checksum_type": "sha1",
        "iso_checksum": "6C60F91BF0AD7B20F469AB8F80863035C517F34F", 
        "autounattend": "win10/Autounattend.xml",
        "headless": "true",
        "cpus": "4",
        "memory_size": "2048",
        "disk_size": "61440",
        "client_id": "{{env `ARM_CLIENT_ID`}}",
        "client_secret": "{{env `ARM_CLIENT_SECRET`}}",
        "subscription_id": "{{env `ARM_SUBSCRIPTION_ID`}}",
        "tenant_id": "{{env `ARM_TENANT_ID`}}"
    }
}