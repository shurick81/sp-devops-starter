            vm_config.vm.provision :shell, path: "../slavepreprovisioning.ps1"
            vm_config.vm.provision :shell, path: "../joinslave.ps1", env: {
                "SPDEVOPSSTARTER_JENKINSLABEL" => ENV['SPDEVOPSSTARTER_VAGRANT_JENKINSLABEL'],
