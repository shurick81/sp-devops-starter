Vagrant.configure(2) do |config|
  config.ssh.insert_key = false
  config.vm.synced_folder '.', '/vagrant', type: 'nfs'
  config.vm.box = "file://./images/centos7-ci.box"
  config.vm.network :private_network, ip: "192.168.52.80", gateway: "192.168.52.1"
  config.vm.network "forwarded_port", guest: 16080, host: 16080, auto_correct: true
  config.vm.network "forwarded_port", guest: 16081, host: 16081, auto_correct: true
  config.vm.provider :virtualbox do |v|
    v.gui = false
    v.memory = 1024
    v.cpus = 2
    v.customize ["modifyvm", :id, "--natdnshostresolver1", "on"]
    v.customize ["modifyvm", :id, "--ioapic", "on"]
  end
  config.vm.provision "ansible_local" do |ansible|
    ansible.playbook = "vm_resources/ansible/main.yml"
  end
end
